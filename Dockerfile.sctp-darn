# Use a base image with Python installed
FROM python:3.9-slim

# Install necessary packages
RUN apt-get update && apt-get install -y \
    sctp-tools \
    lksctp-tools \
    iproute2 \
    tcpdump

# Set the working directory
WORKDIR /opt/sctp_darn

# Copy the Python SCTP server script into the container
COPY sctp_darn_server.py .

# Expose the SCTP port
EXPOSE 5000/sctp

# Run the SCTP server using Python
CMD ["python3", "sctp_darn_server.py"]
